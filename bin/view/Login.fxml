<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="650.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <Label fx:id="lblLoginServerUrl" layoutX="167.0" layoutY="155.0" text="Server Url:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtLoginServerUrl" layoutX="298.0" layoutY="149.0" prefHeight="32.0" prefWidth="206.0" promptText="Server url" text="localhost">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Label layoutX="168.0" layoutY="214.0" text="Database:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtLoginDB" layoutX="298.0" layoutY="208.0" prefHeight="32.0" prefWidth="206.0" promptText="DB Name" text="postgres">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Label fx:id="lblLoginUsername" layoutX="166.0" layoutY="276.0" text="Username:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtLoginUsername" layoutX="298.0" layoutY="270.0" prefHeight="32.0" prefWidth="206.0" promptText="Username" text="postgres">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Label fx:id="lblLoginPassword" layoutX="167.0" layoutY="334.0" text="Password:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtLoginPassword" layoutX="298.0" layoutY="328.0" prefHeight="32.0" prefWidth="206.0" promptText="Password" text="postgres">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnLogin" layoutX="440.0" layoutY="389.0" mnemonicParsing="false" onAction="#onLoginClick" text="Login">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label fx:id="lblLoginError" layoutX="96.0" layoutY="452.0" prefHeight="40.0" prefWidth="408.0" textFill="#e40b0b">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
